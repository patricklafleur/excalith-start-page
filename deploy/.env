# Configuration for Synology deployment
# Copy this file to .env and customize

# External port for accessing the start page
# Access: http://synology-ip:PORT
PORT=8080

# Container name
CONTAINER_NAME=excalith-start-page

# Build mode (docker = file-based persistence)
BUILD_MODE=docker

# Node environment
NODE_ENV=production

# Optional: Healthcheck interval in seconds
HEALTHCHECK_INTERVAL=30

# Optional: Healthcheck timeout in seconds
HEALTHCHECK_TIMEOUT=10

# Optional: Healthcheck retries before marking unhealthy
HEALTHCHECK_RETRIES=3
